<!-- app/views/appointments/index.html.erb -->
<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Indicadores</h1>
    <p class="text-gray-600">Clique em um indicador para visualizar suas marcações.</p>
  </div>
  
  <div class="grid grid-cols-1 gap-4 md:grid-cols-2 lg:grid-cols-3">
    <% @referrals.each do |referral| %>
      <div class="border border-gray-300 p-4 rounded-lg">
        <h2 class="text-xl font-medium text-gray-900"><%= referral.name %></h2>
        <%= link_to 'Visualizar marcações', index_by_referral_appointments_path(referral_id: referral.id), class: "mt-2 inline-block text-blue-500 hover:text-blue-700" %>
      </div>
    <% end %>
  </div>

  <% if @referrals.empty? %>
    <div class="text-center mt-8">
      <p class="text-gray-600">Nenhum indicador encontrado.</p>
    </div>
  <% end %>
</div>
