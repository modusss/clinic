<div class="mx-auto max-w-lg py-8">
<%= form_with(model: region, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4") do |form| %>
<% if region.errors.any? %>
<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
<strong class="font-bold">Oops!</strong>
<span class="block sm:inline"> <%= pluralize(region.errors.count, "error") %> prohibited this region from being saved:</span>
    <ul class="list-disc list-inside">
      <% region.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="mb-4">
  <%= form.label "Nome", class: "block text-gray-700 font-bold mb-2" %>
  <%= form.text_field :name, class: "appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
</div>

<div class="flex items-center justify-between">
  <%= form.submit "Salvar", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
</div>
<% end %>
</div>